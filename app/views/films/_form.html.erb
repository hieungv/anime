      <ul>
      <% film.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :categories %>
    <%= form.select :category_ids,
      options_for_select(@categories.map{|key, value| [key, value]}),
        {include_blank: true}, {class: "chosen-select", multiple: "true"} %>
  </div>

  <div class="field">
    <%= form.label :release_year %>
    <%= form.date_field :release_year %>
  </div>

  <div class="field">
    <%= form.label :thumbnail %>
    <%= form.file_field :thumbnail %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, class: "ckeditor" %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
