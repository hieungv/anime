<div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
  <div class="agile-news-table"><%= link_to "Thêm tập", new_film_video_path(@film) %>
    <table class="table table-striped table-bordered example" >
      <thead>
        <tr>
          <th>No.</th>
          <th>Tên phim</th>
          <th>Năm phát hành</th>
          <th>Tập</th>
          <th>Thể loại</th>
          <th>Lượt xem</th>
          <th>Trạng thái</th>
          <th>Tác vụ</th>
        </tr>
      </thead>
      <tbody>
        <% @videos.each do |video| %>
          <tr>
            <td>1</td>
            <td class="w3-list-img">
              <%= link_to film_video_path(film_id: video.film.slug, id: video) do %>
                <%= image_tag url_for(video.thumbnail), alt: "" %>
                <span><%= video.title %></span>
              <% end %>
            </td>
            <td>
              <%= video.created_at%>
            </td>
            <td><%= video.episodes %></td>
            <td class="w3-list-info">
              <% video.film.categories.each do |f| %>
                <%= link_to f  do%>
                  <p class="label label-primary"><%= f.name %></p>
                <% end %>
              <% end %>
            </td>
            <td class="w3-list-info">
              <a href="genre.html">
                <%= video.impressions_count %>
              </a>
            </td>

            <td>dang cap nhat</td>
            <td>
              <%= link_to  edit_film_video_path(film_id: video.film.slug, id: video), class: "label label-danger" do %>
                Edit
              <% end %>

              <%= link_to  film_video_path(film_id: video.film.slug, id: video), class: "label label-info" do %>
                Xem
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <script type="text/javascript">
      $(document).ready(function() {
      $('.example').DataTable();
      });
    </script>
  </div>
</div>


