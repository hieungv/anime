<div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
  <div class="agile-news-table">
    <%= link_to "Thêm phim", new_film_path %>
    <%= link_to "Thêm thể loại", new_category_path %>
    <table  class="table table-striped table-bordered example" >
      <thead>
        <tr>
          <th>No.</th>
          <th>Tên phim</th>
          <th>Năm phát hành</th>
          <th>Tổng số tập</th>
          <th>Lượt xem</th>
          <th>Thể loại</th>
          <th>Đánh giá</th>
          <th>Trạng thái</th>
          <th>Tác vụ</th>
        </tr>
      </thead>
      <tbody>
        <% @films.each do |film| %>
          <tr>
            <td>1</td>
            <td class="w3-list-img">
              <%= link_to film_video_path(film_id: film.slug, id: film.videos.first) do %>
                <%= image_tag url_for(film.thumbnail), alt: "" %>
                  <span><%= film.name %></span>
              <% end %>
            </td>
            <td><%= film.release_year %></td>
            <td>
              <%= film.videos.count %>
            </td>
            <td class="w3-list-info"><a href="genre.html">
              <%= sum_view(film) %>
            </td>
            <td class="w3-list-info">
              <% film.categories.each do |f| %>
                <%= link_to f do %>
                  <p class="label label-primary"><%= f.name %></p>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= avg_star(film) %>
              (<%= count_reviews_user(film) %> )
            </td>
            <td>dang cap nhat</td>
            <td>
               <%= link_to  new_film_video_path(film), class: "label label-info", data:{turbolinks: "false"} do %>
                Thêm tập
              <% end %>
              <%= link_to film, class: "label label-success" do %>
                Danh sách tập
              <% end %>
              <%= link_to film_path(film.id),
            method: :delete,  data: { confirm: "chac xoa" }, class: "label label-danger" do %>
                Xóa
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <script type="text/javascript">
      $(document).ready(function() {
      $('.example').DataTable();
      });
    </script>
  </div>
</div>
