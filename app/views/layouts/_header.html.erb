<div id="demo-1" >
  <div class="demo-inner-content">
    <!--/header-w3l-->
    <div class="header-w3-agileits" id="home" style="padding-top: 0px;">
      <div class="inner-header-agile">
      <nav class="navbar navbar-default" >
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse"
            data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <h1>
            <%=link_to root_path do %><span>A</span>nime <span>P</span>ro
            <% end %>
          </h1>
        </div>
        <!-- navbar-header -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="active">
              <%= link_to "Home", "index.html" %>
            </li>
            <li class="dropdown">
              <%= link_to categories_path, class: "dropdown-toggle",
                data: {toggle: "dropdown"}, aria: {expanded: "true"} do %>
                Thể loại
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu multi-column columns-3">
                <li>
                <div class="col-sm-12">
                  <ul class="multi-column-dropdown">
                    <% list_categories.each do |category| %>
                      <li><%= link_to category.name, category %></li>
                    <% end %>
                  </ul>
                </div>
                <div class="clearfix"></div>
                </li>
              </ul>
            </li>
            <li><%= link_to "news", "news.html" %></li>

          <% if user_signed_in? %>
            <% if current_user.admin %>
              <li><%= link_to "Danh sách anime", films_path %></li>
            <% end %>
          <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                Đăng xuất
              <% end %>
            </li>
          <% else %>
            <li class="dropdown">
              <%= link_to "Đăng nhập", new_user_session_path %>
              <ul class="dropdown-menu multi-column columns-3">
              <li>
                <ul class="multi-column-dropdown">
                  <%= link_to "Đăng ký", new_user_registration_path %>
                </ul>
              </li>
            </ul>
          </li>
          <% end %>
        </ul>
      </div>
      <div class="clearfix"> </div>
      </nav>
        <div class="w3ls_search">
            <div class="cd-main-header">
              <ul class="cd-header-buttons">
                <li><a class="cd-search-trigger" href="#cd-search"> <span></span></a></li>
              </ul> <!-- cd-header-buttons -->
            </div>
            <div id="cd-search" class="cd-search">
              <form action="#" method="post">
                <input name="Search" type="search" placeholder="Search...">
              </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
